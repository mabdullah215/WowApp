<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:id="@+id/card_profile"
            app:cardCornerRadius="8dp"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/user_profile"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/card_profile"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/uber_move_bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:id="@+id/tv_driver_name"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_car_make"
                android:fontFamily="@font/uber_move_medium"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_car_number"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/uber_move_medium"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_appointmentTime"
            android:drawableTint="#999999"
            android:fontFamily="@font/uber_move_bold"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/uber_move_medium"
            android:layout_below="@+id/tv_appointmentTime"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:id="@+id/tv_appointmentType"
            android:layout_height="wrap_content"/>


        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            app:chipMinTouchTargetSize="0dp"
            android:id="@+id/chip_status"
            app:chipCornerRadius="8dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_appointmentType"
            android:textColor="@color/white"
            android:layout_marginTop="4dp"
            android:textSize="10sp"
            android:layout_height="wrap_content"/>



    </RelativeLayout>




</com.google.android.material.card.MaterialCardView>


