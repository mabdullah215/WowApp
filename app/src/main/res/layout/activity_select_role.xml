<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context=".SelectRole">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_back"
        android:src="@drawable/ic_back" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="I am a"
            android:fontFamily="@font/uber_move_bold"
            android:textSize="28sp"
            android:layout_centerHorizontal="true"
            android:textColor="#333333"
            android:layout_marginTop="80dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="Select Your Role"
            android:fontFamily="@font/uber_move_regular"
            android:layout_height="wrap_content"/>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/role_list"
            android:layout_marginTop="24dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="60dp"
        android:layout_above="@+id/button_continue"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="Car Owner"
            android:textSize="18sp"
            android:fontFamily="@font/uber_move_medium"
            android:textColor="#333333"
            android:id="@+id/tv_role"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard"
            android:fontFamily="@font/uber_move_regular"
            android:id="@+id/tv_desc"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_continue"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:drawableRight="@drawable/ic_path"
        android:text="Continue"
        app:cornerRadius="12dp" />



</RelativeLayout>