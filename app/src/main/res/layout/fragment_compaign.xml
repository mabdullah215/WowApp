<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".customer.fragments.CompaignFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context=".customer.MainActivity">

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/compaign_list"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/img_support"
            android:src="@drawable/img_support"
            android:layout_height="wrap_content"/>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            app:contentPadding="16dp"
            app:cardCornerRadius="16dp"
            android:id="@+id/button_new_dialog"
            app:cardBackgroundColor="@color/purple_200"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="New"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_compaign_img"
                android:drawablePadding="5dp"
                android:drawableTint="@color/white"
                android:layout_height="wrap_content"/>

        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>


</RelativeLayout>