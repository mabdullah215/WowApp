<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_back"
        android:src="@drawable/ic_back" />

    <LinearLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_below="@+id/img_back"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/uber_move_medium"
            android:lineSpacingExtra="2.3sp"
            android:text="Enter Phone Number"
            android:textColor="#333333"
            android:textSize="25sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="You will get a verification code"
            android:textColor="#333333"
            android:textSize="16sp" />

        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/bg_curve"
            android:backgroundTint="#d8d8d8"
            android:layout_centerVertical="true"
            android:id="@+id/et_input"
            android:drawablePadding="10dp"
            android:hint="00966 3 8876085 "
            android:textColorHint="#cccccc"
            android:inputType="phone"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_country"
            android:layout_height="55dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/uber_move_regular"
            android:lineSpacingExtra="1.3sp"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="normal"
            android:text="Follow phone number format “+971-505-5525-96”" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_layout"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="1.5sp"
            android:text="By continuing you are agree to\nTerms and conditions of WOW 2023"
            android:textColor="#999999"
            android:textSize="12sp"
            android:textStyle="normal" />


        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_marginTop="24dp"
            android:id="@+id/button_proceed"
            android:text="Submit"
            app:cornerRadius="8dp"
            android:layout_height="55dp"/>

    </LinearLayout>










</RelativeLayout>