<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="16dp"
    app:contentPadding="16dp"
    app:cardCornerRadius="12dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_title"
                android:fontFamily="@font/uber_move_bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_price"
                android:textSize="12sp"
                android:layout_below="@+id/tv_title"
                android:textColor="#666666"
                android:text="0 SAR"
                android:fontFamily="@font/uber_move_regular"
                android:layout_height="wrap_content"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="50dp"
                app:cardCornerRadius="12dp"
                android:layout_alignParentRight="true"
                app:cardBackgroundColor="#f5f5f5"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/img_advertised"
                    android:layout_height="match_parent"/>


            </com.google.android.material.card.MaterialCardView>



        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Start Date"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:fontFamily="@font/uber_move_regular"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_start_date"
                    android:text="5 Dec 2022"
                    android:fontFamily="@font/uber_move_medium"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="End Date"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:fontFamily="@font/uber_move_regular"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_end_date"
                    android:text="5 Septeber 2023"
                    android:fontFamily="@font/uber_move_medium"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Duration"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:fontFamily="@font/uber_move_regular"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_duration"
                    android:text="1 month"
                    android:fontFamily="@font/uber_move_medium"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:text="Distance"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:fontFamily="@font/uber_move_regular"
                    android:layout_height="wrap_content"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_kms"
                    android:text="100 km/day"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_height="wrap_content"/>



            </LinearLayout>






        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Spots Available"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:fontFamily="@font/uber_move_regular"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_spots"
                    android:text="1"
                    android:fontFamily="@font/uber_move_medium"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:text="City"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:fontFamily="@font/uber_move_regular"
                    android:layout_height="wrap_content"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_city"
                    android:text="100 km/day"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_height="wrap_content"/>



            </LinearLayout>



        </LinearLayout>


    </LinearLayout>




</com.google.android.material.card.MaterialCardView>


