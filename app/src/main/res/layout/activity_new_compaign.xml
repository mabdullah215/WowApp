<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:overScrollMode="never"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/top_panel"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Spread Your Message!"
                android:fontFamily="@font/uber_move_bold"
                android:textSize="22sp"
                android:id="@+id/label_extend"
                android:textColor="#333333"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/label_extend"
                android:text="Estimated Charges: 700 SAR"
                android:layout_height="wrap_content"/>


            <ImageView
                android:layout_width="35dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/img_close_bold"
                android:id="@+id/img_close"
                android:layout_gravity="right"
                android:layout_height="35dp"/>


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:text="Compaign Title"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:fontFamily="@font/uber_move_bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/et_title"
            android:padding="15dp"
            android:maxLines="1"
            android:textColorHint="#d9d9d9"
            android:hint="Campaign Title"
            android:fontFamily="@font/uber_move_regular"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:background="@drawable/bg_curve"
            android:backgroundTint="#d1d1d1"
            android:layout_height="55dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:text="City"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:fontFamily="@font/uber_move_bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:cardElevation="0dp"
            app:strokeColor="#ccc"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="4dp"
            app:strokeWidth="1dp"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="match_parent"
                android:padding="14dp"
                android:id="@+id/spinner_city"
                android:layout_height="wrap_content"/>


        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:layout_width="wrap_content"
            android:text="Duration"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:fontFamily="@font/uber_move_bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:cardElevation="0dp"
            app:strokeColor="#ccc"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="4dp"
            app:strokeWidth="1dp"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="match_parent"
                android:padding="14dp"
                android:id="@+id/spinner_duration"
                android:layout_height="wrap_content"/>


        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:layout_width="wrap_content"
            android:text="Start Date"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:fontFamily="@font/uber_move_bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_start_date"
            android:padding="15dp"
            android:text="Monday, 24 June 2022"
            android:fontFamily="@font/uber_move_medium"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:drawableRight="@drawable/ic_path"
            android:textSize="14sp"
            android:background="@drawable/square_corner"
            android:layout_height="55dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:text="End Date"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:fontFamily="@font/uber_move_bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_end_date"
            android:padding="15dp"
            android:text="Monday, 24 June 2022"
            android:fontFamily="@font/uber_move_medium"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:background="@drawable/bg_curve"
            android:backgroundTint="#d1d1d1"
            android:layout_height="55dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:text="Number of Cars"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:fontFamily="@font/uber_move_bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/et_num_cars"
            android:padding="15dp"
            android:textColorHint="#d9d9d9"
            android:hint="Ex: 10"
            android:fontFamily="@font/uber_move_medium"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:inputType="number"
            android:background="@drawable/bg_curve"
            android:backgroundTint="#d1d1d1"
            android:layout_height="55dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:text="Design"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:fontFamily="@font/uber_move_bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_designs"
            android:padding="15dp"
            android:visibility="gone"
            android:fontFamily="@font/uber_move_medium"
            android:text="I want to use my own ad design"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:drawableRight="@drawable/ic_path"
            android:textSize="14sp"
            android:background="@drawable/square_corner"
            android:layout_height="55dp"/>


        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_upload"
            android:text="Upload Design"
            android:gravity="center_vertical"
            android:fontFamily="@font/uber_move_bold"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:drawableRight="@drawable/ic_add_contact"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="100dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/img_source"
                android:layout_height="match_parent"/>


        </com.google.android.material.card.MaterialCardView>



        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:id="@+id/button_done"
            android:text="Start Spreading!"
            app:cornerRadius="12dp"
            android:textAllCaps="false"
            android:fontFamily="@font/uber_move_bold"
            android:layout_marginTop="10dp"
            android:layout_height="60dp"/>




    </LinearLayout>












</androidx.core.widget.NestedScrollView>



