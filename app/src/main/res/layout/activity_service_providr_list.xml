<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".driver.ServiceProvidrList">

    <include layout="@layout/toolbar_layout_subtitle"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@+id/toolbar_layout"
        android:padding="16dp"
        android:id="@+id/label_title"
        android:textSize="18sp"
        android:fontFamily="@font/uber_move_bold"
        android:textColor="@color/black"
        android:text="Available Service Providers"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/data_list"
        android:layout_below="@+id/label_title"
        android:padding="16dp"
        android:layout_height="wrap_content"/>


    <include layout="@layout/progress_bar_view"
        android:visibility="gone"/>


</RelativeLayout>