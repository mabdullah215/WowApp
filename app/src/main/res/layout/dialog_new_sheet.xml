<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:text="I would like to"
        android:id="@+id/label_search"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/uber_move_bold"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:textColor="#333333"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>


    <ImageView
        android:layout_width="35dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/img_close_bold"
        android:id="@+id/img_close"
        android:layout_marginTop="5dp"
        android:layout_gravity="right"
        android:layout_height="35dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/label_search"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="16dp"
            android:id="@+id/layout_extend"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:src="@drawable/ic_extend"
                android:layout_height="80dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Extend!"
                android:textColor="#4d4d4d"
                android:fontFamily="@font/uber_move_medium"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:text="Your current campaign"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/layout_spread"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:src="@drawable/ic_spread"
                android:layout_height="80dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Spread!"
                android:textColor="#4d4d4d"
                android:fontFamily="@font/uber_move_medium"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:text="Create a new Campaign"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="16dp"
            android:id="@+id/layout_focus"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:src="@drawable/ic_focus"
                android:layout_height="80dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Custom Request"
                android:textColor="#4d4d4d"
                android:gravity="center"
                android:fontFamily="@font/uber_move_medium"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:text="Send your fleet to a specific location"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>









</RelativeLayout>



