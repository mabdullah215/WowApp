<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".driver.CompaignDriving">

    <include layout="@layout/toolbar_layout_centre_white"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar_layout"
        android:layout_height="match_parent"
        android:id="@+id/map">

    </RelativeLayout>
    

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        android:layout_below="@+id/toolbar_layout"
        app:cardCornerRadius="16dp"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="12dp"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_toLeftOf="@+id/amount_layout"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Today's Earning"
                    android:textSize="18sp"
                    android:id="@+id/label_earning"
                    android:textColor="@color/black"
                    android:fontFamily="@font/uber_move_bold"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Monday, 24 October 2023"
                    android:textSize="14sp"
                    android:layout_below="@+id/label_earning"
                    android:drawablePadding="8dp"
                    android:id="@+id/tv_today_date"
                    android:fontFamily="@font/uber_move_medium"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:minWidth="60dp"
                android:background="@drawable/square_corner"
                android:backgroundTint="#f1f1f1"
                android:id="@+id/distance_layout"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_impressions"
                    android:textSize="22sp"
                    android:text="0"
                    android:textColor="@color/purple_200"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Km"
                    android:textColor="@color/purple_200"
                    android:textSize="10sp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@id/distance_layout"
                android:orientation="vertical"
                android:id="@+id/amount_layout"
                android:layout_marginRight="8dp"
                android:padding="8dp"
                android:minWidth="60dp"
                android:background="@drawable/square_corner"
                android:backgroundTint="#f1f1f1"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_amount"
                    android:textSize="22sp"
                    android:textColor="@color/purple_200"
                    android:text="0"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="SAR"
                    android:textColor="@color/purple_200"
                    android:textSize="10sp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_driving"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@drawable/ic_home_white"
        android:drawablePadding="8dp"
        android:text="Start Driving"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:backgroundTint="@color/start_driving"
        app:cornerRadius="16dp" />


</RelativeLayout>