<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:id="@+id/compaign_item"
    app:cardCornerRadius="16dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="12dp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_centerVertical="true"
            android:id="@+id/img_source"
            android:src="@drawable/ic_user_img"
            android:layout_height="50dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/img_source"
            android:id="@+id/tv_title"
            android:layout_toLeftOf="@+id/distancelayout"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/uber_move_medium"
            android:singleLine="true"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:id="@+id/distancelayout"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Distance"
                android:textSize="10sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_distance"
                android:textSize="22sp"
                android:text="0"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Km"
                android:textSize="10sp"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>


