<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".customer.fragments.CompaignFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Appointments"
                android:textSize="24sp"
                android:id="@+id/label_chat"
                android:gravity="center_vertical"
                android:fontFamily="@font/uber_move_bold"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="4dp"
                android:id="@+id/img_refresh"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_refresh"
                android:layout_height="wrap_content"/>

        </RelativeLayout>




        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:id="@+id/data_list"
            tools:listitem="@layout/item_upcoming_compaigns"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <include layout="@layout/layout_no_search_results"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>



    <include layout="@layout/progress_bar_view"
        android:visibility="gone"/>








</RelativeLayout>