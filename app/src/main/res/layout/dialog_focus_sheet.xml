<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:overScrollMode="never"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/top_panel"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Focus on your Target!"
                android:fontFamily="@font/uber_move_bold"
                android:textSize="22sp"
                android:id="@+id/label_extend"
                android:textColor="#333333"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/label_extend"
                android:text="Send your own fleet to any target location\nyou desire"
                android:layout_height="wrap_content"/>


            <ImageView
                android:layout_width="35dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/img_close_bold"
                android:id="@+id/img_close"
                android:layout_gravity="right"
                android:layout_height="35dp"/>


        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:text="Which active or upcoming campaign you want"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:fontFamily="@font/uber_move_bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_cities"
            android:padding="15dp"
            android:fontFamily="@font/uber_move_medium"
            android:text="Select hrs"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:drawableRight="@drawable/ic_path"
            android:textSize="14sp"
            android:background="@drawable/square_corner"
            android:layout_height="55dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:text="Location"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:fontFamily="@font/uber_move_bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/et_location"
            android:padding="15dp"
            android:textColorHint="#d9d9d9"
            android:hint="Search"
            android:drawableRight="@drawable/ic_search"
            android:fontFamily="@font/uber_move_medium"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:background="@drawable/bg_curve"
            android:backgroundTint="#d1d1d1"
            android:layout_height="55dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Duration"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:fontFamily="@font/uber_move_bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_duration"
            android:padding="15dp"
            android:text="2 Months"
            android:fontFamily="@font/uber_move_medium"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:drawableRight="@drawable/ic_path"
            android:textSize="14sp"
            android:background="@drawable/square_corner"
            android:layout_height="55dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:text="Date"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:fontFamily="@font/uber_move_bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_date"
            android:padding="15dp"
            android:text="Monday, 24 June 2022"
            android:fontFamily="@font/uber_move_medium"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:drawableRight="@drawable/ic_calendar"
            android:textSize="14sp"
            android:background="@drawable/square_corner"
            android:layout_height="55dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:text="Start Time"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:fontFamily="@font/uber_move_bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_time"
            android:padding="15dp"
            android:text="Select"
            android:fontFamily="@font/uber_move_medium"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:drawableRight="@drawable/ic_path"
            android:textSize="14sp"
            android:background="@drawable/square_corner"
            android:layout_height="55dp"/>




        <TextView
            android:layout_width="wrap_content"
            android:text="Number of Cars"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:fontFamily="@font/uber_move_bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_num_cars"
            android:padding="15dp"
            android:text="Select"
            android:fontFamily="@font/uber_move_medium"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:drawableRight="@drawable/ic_path"
            android:textSize="14sp"
            android:background="@drawable/square_corner"
            android:layout_height="55dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:text="Offer"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:fontFamily="@font/uber_move_bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>


        <EditText
            android:layout_width="match_parent"
            android:id="@+id/et_offer"
            android:padding="15dp"
            android:textColorHint="#d9d9d9"
            android:hint="Ex.200"
            android:inputType="number"
            android:fontFamily="@font/uber_move_medium"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:background="@drawable/bg_curve"
            android:backgroundTint="#d1d1d1"
            android:layout_height="55dp"/>



        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:id="@+id/button_done"
            android:text="Attack!"
            app:cornerRadius="12dp"
            android:textAllCaps="false"
            android:fontFamily="@font/uber_move_bold"
            android:layout_marginTop="10dp"
            android:layout_height="55dp"/>




    </LinearLayout>












</androidx.core.widget.NestedScrollView>



