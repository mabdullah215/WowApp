<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".customer.CustomerNewAccount">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/top_panel"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="New Account"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/uber_move_bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Welcome to Wow!"
        android:textColor="#333333"
        android:textSize="26sp"
        android:fontFamily="@font/uber_move_medium"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="wrap_content"
        android:text="Two things before we start"
        android:textColor="#4d4d4d"
        android:fontFamily="@font/uber_move_regular"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="wrap_content"
        android:text="Full Name"
        android:layout_marginTop="40dp"
        android:textColor="#333333"
        android:textSize="12sp"
        android:fontFamily="@font/uber_move_regular"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/et_fullname"
        android:padding="15dp"
        android:hint="John Smith"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_curve"
        android:backgroundTint="#d1d1d1"
        android:layout_height="55dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Email"
        android:layout_marginTop="8dp"
        android:textColor="#333333"
        android:textSize="12sp"
        android:fontFamily="@font/uber_move_regular"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:id="@+id/et_email"
        android:padding="14dp"
        android:hint="abc@gmail.com"
        android:textSize="15sp"
        android:background="@drawable/bg_curve"
        android:backgroundTint="#d1d1d1"
        android:layout_height="55dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:text="Password"
        android:layout_marginTop="8dp"
        android:textColor="#333333"
        android:textSize="12sp"
        android:fontFamily="@font/uber_move_regular"
        android:layout_height="wrap_content"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:id="@+id/et_password"
        android:padding="14dp"
        android:hint="******"
        android:textSize="15sp"
        android:inputType="textPassword"
        android:background="@drawable/bg_curve"
        android:backgroundTint="#d1d1d1"
        android:layout_height="55dp"/>


    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        app:cornerRadius="8dp"
        android:layout_marginTop="20dp"
        android:text="Done"
        android:id="@+id/button_done"
        android:layout_height="60dp"/>



</LinearLayout>